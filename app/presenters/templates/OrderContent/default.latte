{block content}

	<h2 style="color: black">ID objednávky: {$orderID}</h2>

	<table class="table">
		<thead>
		  <tr>
		  	<th>ID tovaru</th>
		    <th>Názov</th>
		    <th>Dodávateľ</th>
		    <th>Cena</th>
		    <th>Počet</th>
		  </tr>
		</thead>
	    <tbody>
	    {foreach $goods as $g}
			<tr>
				<td><p style="color: black">{$g->id_sukl}</p></td>
				<td><p style="color: black">{$g->name}</p></td>
				<td><p style="color: black">{$g->producer}</p></td>
				<td><p style="color: black">{$g->price}</p></td>
				<td><p style="color: black">{$g->count}</p></td>
			</tr>
	    {/foreach}
	    </tbody>
	</table>

	{if $img}
	<center>
		<img src="http://127.0.0.1/lekaren/www/{$img}">
	</center>
	{/if}

{/block}