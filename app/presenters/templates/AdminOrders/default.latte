{block content}

	<h2 style="color: black">pouzivatel: {$userName}</h2>
	<h4>id: {$userID}</h4>

	<table class="table">
		<thead>
		  <tr>
		  	<th>ID objednavky</th>
		    <th>Datum</th>
		    <th>Stav</th>
		  </tr>
		</thead>
	    <tbody>
	    {foreach $orders as $o}
			<tr>
				<td><a  data-toggle="tooltip" title="Zobrazit obsah ojednavky" style="color: black">{$o->id}</a></td>
				<td>{$o->date}</td>
				<td>
					{if !$o->handeled}				
						<a class="btn btn-default" n:href="this, orderToHandle => $o->id" style="color: red">Vybavit objednavku</a>
					{else}
						<p style="color: green">Odoslana</p>
					{/if}
				</td>
			</tr>
	    {/foreach}
	    </tbody>
	</table>

{/block}